#ifndef PEDALVARIABLES_H_
#define PEDALVARIABLES_H_

#include <stdint.h>

typedef struct _measuredVars
{
	float g_fposition;
	float g_fgyroVelocity;
	float g_fpulse_velocity;
	float g_fposition_prev;
} measuredVariables_t;

typedef struct _estimatedVars
{
	float g_fposition_filtered_plus;
	float g_fposition_filtered_minus;
	float g_fP_minus;
	float g_fP_plus;

	float g_fpedalLinearPosition;
	float g_fpedalLinearVelocity;
} estimatedVariables_t;

typedef struct _kalmanConstants
{
	float g_fdelta_t;
	float g_fQ_model;
	float g_fR_encoder;
} kalmanConstants_t;

typedef struct _pedalVars
{

} pedalVariables_t;


//Calculated Variables



// Constants for kalman filter
extern const float g_fdelta_t;
extern const float g_fQ_model;
extern const float g_fR_encoder;


#endif /* PEDALVARIABLES_H_ */
